{%- liquid
  if product != blank
    assign description = product.description
    assign current_variant = product.selected_or_first_available_variant
  else
    assign description = 'sections.featured_product.placeholder.description' | t
  endif

-%}

  



   <!-- added by Gavin START -->
  <div style="width: 100%; padding: 10px;">
    <style>
      .mopio-accordion {
        width: 100%;
      }
      .mopio-panel {
        border-bottom: 1px solid #121212;
      }
      .mopio-panel .mopio-panel-heading {
        padding: 12px 0;
        cursor: pointer;
        border-top: 1px solid #121212;
        
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .mopio-panel .mopio-panel-heading-icon{
        font-weight: bold;
        font-size: 1.2rem;
        line-height: 1.5;
        transition: all 200ms ;
        transform: rotate(90deg);
        transform-origin: center;

        display: inline-flex;
      }
      .mopio-panel .mopio-panel-heading-name{
        font-weight: normal;
        font-size: 1.18rem;
        padding: 0;
        margin: 0;
      }
  
      @media (max-width: 767px) {
        .mopio-panel .mopio-panel-heading-name{
          font-weight: normal;
          font-size: 1rem;
          padding: 0;
          margin: 0;
        }
      }
      .mopio-panel .mopio-panel-content {
        padding: 8px 24px;
        margin-bottom: 12px;
      }
  .product-item__description a {
  text-decoration: underline;
}

    </style>
    <div class="mopio-accordion">
      <div class="mopio-panel">
        <div class="mopio-panel-heading">
          <span class="mopio-panel-heading-name">
            Description
          </span >
          <span class="mopio-panel-heading-icon" style="rotate: 180deg;">
              <svg width="17" height="16" viewBox="0 0 17 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5.64645 2.64645C5.84171 2.45118 6.15829 2.45118 6.35355 2.64645L11.3536 7.64645C11.5488 7.84171 11.5488 8.15829 11.3536 8.35355L6.35355 13.3536C6.15829 13.5488 5.84171 13.5488 5.64645 13.3536C5.45118 13.1583 5.45118 12.8417 5.64645 12.6464L10.2929 8L5.64645 3.35355C5.45118 3.15829 5.45118 2.84171 5.64645 2.64645Z" fill="currentColor"></path>
              </svg>
          </span>
        </div>
        <div class="mopio-panel-content" style="display: block;">
          {% if current_variant.metafields.custom.var_description == blank  %}
            {{ description }}
          {% else %}
            {{ current_variant.metafields.custom.var_description | metafield_tag }}
          {% endif %}
        </div>
      </div>
    </div>

  </div>
  <!-- added by Gavin END -->

